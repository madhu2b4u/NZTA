<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/peachy_pink"
                android:endColor="@color/lighter_purple"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#0000" />
            <corners android:radius="10dp" />
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp" />
            <size
                android:width="250dp"
                android:height="250dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">

        </shape>
    </item>
    <item android:top="0dp">
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/dark"
                android:startColor="@color/dark"
                android:angle="270" />
        </shape>
    </item>
</layer-list>